<div class="ui grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="ui content" id="messages">
        <div class="ui feed" id="message-container">
          <%= render @mails %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(:mail, html: {id: "create_message", class: "ui reply form", role: "form"}, url: mail_path, remote: true) do |f| %>
          <div class="ui fluid icon input">
            <%= f.text_field :body, placeholder: "Say something.."%>
            <%= f.button '<i class="bordered inverted teal edit link large icon"></i>'.html_safe, class: "compose_button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui fluid card chatbox">
      <div class="ui content">
        <div class="ui secondary vertical menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>